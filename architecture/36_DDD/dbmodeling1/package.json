{
  "name": "dbmodeling1",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "dotenv -e .env.dev -- nest start",
    "start:dev": "dotenv -e .env.dev -- nest start --watch",
    "start:debug": "dotenv -e .env.dev -- nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "test:unit": "dotenv -e .env.test -- jest --config=./jest.unittest.config.js --verbose",
    "test:unit:watch": "dotenv -e .env.test -- jest --config=./jest.unittest.config.js --verbose --watch",
    "test:unit:cov": "dotenv -e .env.test -- jest --config=./jest.unittest.config.js --verbose --coverage",
    "test:unit:reset": "npm run migrate:test && jest --config=./jest.unittest.config.js",
    "test:integration": "dotenv -e .env.test -- jest --config=./jest.integration.config.js",
    "test:integration:reset": "npm run migrate:test && jest --config=./jest.integration.config.js",
    "migrate:dev": "dotenv -e .env.dev -- prisma migrate dev --preview-feature",
    "migrate:dev:reset": "dotenv -e .env.dev -- prisma migrate reset --preview-feature",
    "migrate:test": "dotenv -e .env.test -- prisma migrate reset --force --preview-feature",
    "migrate:prod": "prisma migrate deploy",
    "model-generate": "prisma generate",
    "studio:dev": "dotenv -e .env.dev -- prisma studio",
    "studio:test": "dotenv -e .env.test -- prisma studio",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "seed:dev": "dotenv -e .env.dev -- prisma db seed --preview-feature",
    "seed:test": "dotenv -e .env.test -- prisma db seed --preview-feature",
    "seed": "prisma db seed --preview-feature"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@prisma/client": "^2.28.0",
    "nanoid": "^3.1.23",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "shallow-equal-object": "^1.1.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "jest": "27.0.6",
    "prettier": "^2.3.2",
    "prisma": "^2.28.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
